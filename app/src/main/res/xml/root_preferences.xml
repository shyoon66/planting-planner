<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/setting_header">

        <SwitchPreferenceCompat
            app:key="push"
            app:title="@string/push_title" />

        <SwitchPreferenceCompat
            app:dependency="push"
            app:key="vibration"
            app:title="@string/vibration_title" />

        <SwitchPreferenceCompat
            app:dependency="push"
            app:key="sound"
            app:title="@string/sound_title" />

        <Preference
            app:key="open_source"
            app:title="@string/open_source_title"
            app:summary="@string/open_source_summary" />

    </PreferenceCategory>

</PreferenceScreen>