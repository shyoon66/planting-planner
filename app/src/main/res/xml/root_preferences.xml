<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/setting_header">
        <SwitchPreferenceCompat
            app:key="push"
            app:title="@string/push_title"
            app:defaultValue="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/info_header">
        <Preference
            app:key="open_source"
            app:title="@string/open_source_title"
            app:summary="@string/open_source_summary" />

        <PreferenceScreen
            app:key="version"
            app:title="@string/version_title"
            app:summary="@string/version"/>
    </PreferenceCategory>

</PreferenceScreen>